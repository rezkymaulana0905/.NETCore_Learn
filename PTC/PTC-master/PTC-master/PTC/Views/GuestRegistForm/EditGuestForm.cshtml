@model GuestReg
@{
    ViewData["Title"] = "Edit Guest Form";
}

<div class="container-form">
    <form asp-action="Update" enctype="multipart/form-data">
        <p>Meeting With: @ViewData["Met"]</p>
        <div class="mb-3">
            <input asp-for="Id" type="hidden" class="form-control" value="@Model.Id" required />
            <input asp-for="MetId" type="hidden" class="form-control" value="@Model.MetId" required />
            <input asp-for="ReqId" type="hidden" class="form-control" value="@Model.ReqId" required />
            <label class="form-label">Guest Name</label>
            <input asp-for="Name" type="text" class="form-control" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="SelectCategory">Category</label>
            <select name="SelectCategory" class="form-select" id="SelectCategory">
                @if (ViewData["Category"] != null)
                {
                    foreach (var category in ViewData["Category"] as List<GuestCategory>)
                    {
                        <option value="@category.Id">@category.CategoryName</option>
                    }
                }
            </select>
        </div>
        <div class="mb-3">
            <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" role="switch" name="Overseas" id="OverseasCheckbox" @(Model.CountryCode != "IDN" ? "checked" : "")>
    <input type="hidden" name="Overseas" value="false" />
    <label class="form-check-label" for="OverseasCheckbox">Overseas</label>
    </div>
            <select name="SelectCountry" class="form-select" id="SelectCountry" @(Model.CountryCode == "IDN" ? "disabled" : "")>
    @if (ViewData["Country"] != null)
    {
        foreach (var country in ViewData["Country"] as List<CountryModel>)
        {
            <option value="@country.Code">@country.Name</option>
        }
    }
    </select>
        <input type="hidden" name="SelectCountry" value="IDN" />
        </div>
        <div class="mb-3">
            <label class="form-label">Company</label>
            <input asp-for="Company" type="text" class="form-control" value="@Model.Company" required />
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="CompanyType" name="CompanyType" value="true" @(Model.CompanyType == "Panasonic" ? "checked" : "")>
                <input type="hidden" name="CompanyType" value="false" />
                <label class="form-check-label" for="CompanyType">Panasonic Group</label>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Department</label>
            <input asp-for="DeptSect" type="text" class="form-control" value="@Model.DeptSect" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" type="text" class="form-control" value="@Model.Email" />
        </div>
        <div class="mb-3">
            <label class="form-label">Identification Number</label>
            <input asp-for="NationalId" type="text" class="form-control" value="@Model.NationalId" />
        </div>
        <div class="mb-3">
            <label class="form-label">Image (Guest Picture)</label>
            <input asp-for="ImageData" name="Image" id="Image" type="file" class="form-control" value="@Model.ImageData" />
        </div>
        <div class="mb-3">
            <label class="form-label">Total Guest</label>
            <input asp-for="Total" type="text" class="form-control" value="@Model.Total" required />
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" id="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="col-md-4 mb-3">
                <label for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" id="StartDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Purpose of Visit</label>
            <textarea asp-for="Requirement" maxlength="500" cols="10" wrap="true" class="form-control" rows="5" value="@Model.Requirement" required></textarea>
        </div>
        <div class="mt-4">
            <button class="btn btn-main">
                Submit
            </button>
        </div>
    </form>
</div>
@{
    var countryCode = Model.CountryCode;
    var categoryId = Model.CategoryId;
}

<script>
    // Get references to the checkbox and select box
    const overseasCheckbox = document.getElementById('OverseasCheckbox');
    const selectCountry = document.getElementById('SelectCountry');
    const selectCategory = document.getElementById('SelectCategory');

    const countryCode = '@countryCode';
    const categoryId = '@categoryId';

    // Function to toggle select box state
    function toggleSelectBox() {
        selectCategory.value = categoryId;
        // Check if the checkbox is checked
        if (overseasCheckbox.checked) {
            // If checked, enable the select box
            selectCountry.disabled = false;
            selectCountry.value = countryCode;
        } else {
            // If not checked, disable the select box and set its value to 'Indonesia'
            selectCountry.disabled = true;
            selectCountry.value = 'IDN'
        }
    }

    // Initially toggle select box state
    toggleSelectBox();

    // Add event listener to checkbox to toggle select box state
    overseasCheckbox.addEventListener('change', toggleSelectBox);
</script>