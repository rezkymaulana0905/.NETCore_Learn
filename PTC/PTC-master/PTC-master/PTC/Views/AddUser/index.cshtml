@model List<SsoUser>

@{
    var UserData = ViewData["userEdit"] as SsoUser;
}

<div>
    @if(UserData != null)
    {

        <form action="@Url.Action("Edit")" method="post" class="form-control">
            <div class="mb-3">
                <label class="form-label">EMP ID</label>
                <input name="EmpId" id="EmpId" type="text" class="form-control" value="@UserData.EmpId" required />
            </div>
            <div class="mb-3">
                <label class="form-label">SSO ID</label>
                <input name="Username" id="Username" type="text" class="form-control" value="@UserData.Username" required />
            </div>
            <div class="mb-3">
                <label class="form-label">ROLE</label>
                <select name="RoleId" class="form-select" id="RoleId">
                    @foreach (var role in ViewData["Role"] as List<UserRole>)
                    {
                        <option value="@role.Id">@role.RoleName</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-warning form-control">Edit</button>
        </form>
    } else
    {
        <form action="@Url.Action("AddUser")" method="post" class="form-control">
            <div class="mb-3">
                <label class="form-label">EMP ID</label>
                <input name="EmpId" id="EmpId" type="text" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">SSO ID</label>
                <input name="Username" id="Username" type="text" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">ROLE</label>
                <select name="RoleId" class="form-select" id="RoleId">
                    @foreach (var role in ViewData["Role"] as List<UserRole>)
                    {
                        <option value="@role.Id">@role.RoleName</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-main form-control">Add User</button>
        </form>
    }
    <form method="get" action="@Url.Action("Index")" class="mt-4">
        <div class="search-box d-flex gap-2">
            <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Search Name / EMP ID" value="@ViewData["searchQuery"]">
            <button class="btn btn-main">Search</button>
        </div>
    </form>
    <table id="guestListTable" class="table table-striped table-hover mt-2">
        <thead>
            <tr>
                <th>EMP ID</th>
                <th>Username</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.EmpId
                    </td>
                    <td>
                        @user.Username
                    </td>
                        @foreach (var role in ViewData["Role"] as List<UserRole>)
                        {
                            if(role.Id == user.RoleId)
                            {
                                <td>@role.RoleName</td>
                            }
                        }
                    <td class="d-flex gap-2">
                        <form action="@Url.Action("Delete")" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="empId" id="empId" value="@user.EmpId" />
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                        <form action="@Url.Action("Index")" method="post">
                            <input type="hidden" name="empId" id="empId" value="@user.EmpId" />
                            <button type="submit" class="btn btn-warning">
                                Edit
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    var userRole = '@(UserData != null ? UserData.RoleId : 4)';
    const role = document.getElementById("RoleId");

    role.value = userRole;

</script>