@model List<Category>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categories Page</title>
  <style>
    .category-card {
      transition: transform 0.2s;
    }
    .category-card:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="row mt-4">
      <!-- Category Card Example -->
      @foreach (var show in Model.OrderBy(u=>u.Name))
        {
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card category-card">
          <img src="https://via.placeholder.com/150" class="card-img-top" alt="Category Image">
          <div class="card-body">
            <h5 class="card-title">@show.Name</h5>
            <p class="card-text">Stock : @show.DisplayOrder</p>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@show.Id" class="btn btn-primary">View More</a>
          </div>
        </div>
      </div>
        }
      <!-- Repeat the above block for each category -->
    </div>
  </div>

</body>
</html>