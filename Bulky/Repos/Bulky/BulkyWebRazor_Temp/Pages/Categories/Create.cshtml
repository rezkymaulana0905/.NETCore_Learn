@page
@model BulkyWebRazor_Temp.Pages.Categories.CreateModel

<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            </hr>
        </div>
        <div asp-validation-summary="ModelOnly"></div>@*  display validation under header  *@
        <div class="mb-3 row p-1">
            @* adding "row to be more responsive  *@
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" type="text" class="form-control">
            <span asp-validation-for="Category.Name" class="text-danger"></span> @* display validation under textbox *@
        </div>
        <div class="mb-3 row p-1">
            @* adding "row" to be more responsive  *@
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" type="text" class="form-control">
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="categories/index" class="btn btn-secondary form-control"> Back To List</a>
            </div>
        </div>
    </div>
</form>

@*  this scripts to show validation alert without take data from server/ without refresh page *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
