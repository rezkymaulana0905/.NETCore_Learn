@model List<Employment>
@* <partial name="_Notification" /> *@ @* move to _Layout.cshtml *@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Employment List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Employment
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Employee ID
            </th>
            <th>
                Name
            </th>
            <th>
                Status
            </th>
            <th>
                Job Status
            </th>
            <th>
                Date Join
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.EMPID))
        {
            <tr>
                <td align="center">@obj.EMPID</td>
                <td>
                    @obj.NAME
                </td>
                <td>
                    @obj.STATUS
                </td>
                <td>
                    @obj.JOBID
                </td>
                <td>
                    @obj.JOINDATE
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.EMPID" class="btn btn-primary mx-2">
                            @* adding asp-route-id to bring id into controller *@
                            <i class="bi bi-pencil-square">Update</i>
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.EMPID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3">Delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
